@model List<Notekeeper.Models.Note>

@{
    ViewBag.Title = "Notes";
}
<div class="container row">
    <div class="dropdown">
        <button class="btn btn-default dropdown-toggle" type="button" id="dropdownCategory" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
            Category
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownCategory">
            <li><a href="#">All</a></li>
            <li><a href="#">CSharp</a></li>
            <li><a href="#">Javascript</a></li>
            <li><a href="#">CSS</a></li>
            <li role="separator" class="divider"></li>
            <li><a href="#">Node</a></li>
        </ul>
    </div>
</div>

<br />
<div>
    <button class="btn btn-success " data-toggle="modal" data-target="#addModal">
        <span class="inline glyphicon glyphicon-plus"></span>
    </button>
    <h2 class="inline">Notes</h2>
</div>
<!-- Modal for note addition -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    Add Note
                </h4>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">
                <div id="AddNoteVisibility" class="container">
                    <br />
                    <p>Title</p>
                    <p>
                        @Html.TextBox("Title", string.Empty, new
                   {
                       @class = "form-item"
                   })
                    </p>
                    @Html.Hidden("ColorClass", "pastel-purple")
                    <br />
                    <textarea id="addeditor" rows="8" cols="80"></textarea>
                    <!--                    <div id="addeditor" class="mceeditor"></div>
                    -->
                    <br />
                    <p>Categories</p>
                    <p>
                        @Html.TextBox("Categories", string.Empty, new
                   {
                       @class = "form-item"
                   })
                    </p>
                    <br />
                    <div class="bordercircle posrelative inline colorselected">
                        <div class="pastel-purple circle inline posabsolute colorselector"></div>
                    </div>
                    <div class="bordercircle posrelative inline">
                        <div class="pastel-blue circle inline posabsolute colorselector"></div>
                    </div>
                    <div class="bordercircle posrelative inline">
                        <div class="pastel-green circle inline posabsolute colorselector"></div>
                    </div>
                    <div class="bordercircle posrelative inline">
                        <div class="pastel-yellow circle inline posabsolute colorselector"></div>
                    </div>
                    <div class="bordercircle posrelative inline">
                        <div class="pastel-orange circle inline posabsolute colorselector"></div>
                    </div>
                    <div class="bordercircle posrelative inline">
                        <div class="pastel-red circle inline posabsolute colorselector"></div>
                    </div>
                    <div class="bordercircle posrelative inline">
                        <div class="pastel-blue2 circle inline posabsolute colorselector"></div>
                    </div>
                    <br />
                    <br />
                </div>


            </div>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="cancelAdd()">
                    Cancel
                </button>
                <button type="button" class="btn btn-success add-note">
                    Add
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal for note update -->
<div class="modal fade" id="updateModal" tabindex="-1" role="dialog"
     aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <!-- Modal Header -->
            <div class="modal-header">
                <button type="button" class="close"
                        data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">
                    Update Note
                </h4>
            </div>

            <!-- Modal Body -->
            <div class="modal-body">

                <div id="UpdateNoteVisibility" class="container">
                    <br />
                    <p>Title</p>
                    <p>
                        @Html.TextBox("Title", string.Empty, new
                   {
                       @class = "form-item"
                   })
                    </p>
                    @Html.Hidden("Id", "")
                    @Html.Hidden("ColorClass", "pastel-purple")
                    <br />
                    <textarea id="updateeditor" rows="8" cols="80">
                    </textarea>
                    <br />
                    <p>Categories</p>
                    <p>
                        @Html.TextBox("Categories", string.Empty, new
                   {
                       @class = "form-item"
                   })
                    </p>
                    <br />
                    <div class="bordercircle posrelative inline colorselected">
                        <div class="pastel-purple circle inline posabsolute colorselector"></div>
                    </div>
                    <div class="bordercircle posrelative inline">
                        <div class="pastel-blue circle inline posabsolute colorselector"></div>
                    </div>
                    <div class="bordercircle posrelative inline">
                        <div class="pastel-green circle inline posabsolute colorselector"></div>
                    </div>
                    <div class="bordercircle posrelative inline">
                        <div class="pastel-yellow circle inline posabsolute colorselector"></div>
                    </div>
                    <div class="bordercircle posrelative inline">
                        <div class="pastel-orange circle inline posabsolute colorselector"></div>
                    </div>
                    <div class="bordercircle posrelative inline">
                        <div class="pastel-red circle inline posabsolute colorselector"></div>
                    </div>
                    <div class="bordercircle posrelative inline">
                        <div class="pastel-blue2 circle inline posabsolute colorselector"></div>
                    </div>
                    <br />
                    <br />
                </div>

            </div>

            <!-- Modal Footer -->
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal" onclick="cancelUpdate()">
                    Cancel
                </button>
                <button type="button" class="btn btn-success update-note">
                    Update
                </button>
            </div>
        </div>
    </div>
</div>
<br />

<div class="container-fluid row">
    <div id="startgrid" class="grid grid--draggable">
        @foreach (var note in @Model)
        {
            <div data-noteid="@note.Id" data-categories="@note.Categories" data-colorclass="@note.ColorClass" class="panel item-width grid-item @note.Categories @note.ColorClass">
                <div class="panel-heading @(note.ColorClass.TrimEnd())-header item-width">@note.Title</div>
                <div class="panel-body @note.ColorClass item-width">
                    <div id="notecontent" class="item-width">@Html.Raw(note.Content)</div>
                    <div class="editrelative item-width"><span class="glyphicon glyphicon-trash trashpos item-width"></span><span class="glyphicon glyphicon-edit editpos item-width"></span></div>
                </div>
            </div>
        }
    </div>
</div>
<script>
    var cancelAdd = function () {
        $("#AddNoteVisibility textarea").val("");
        $('#AddNoteVisbility input[name="Title"').val("");
        $('#AddNoteVisbility input[name="Categories"').val("");

    }
    var cancelUpdate = function () {
        $("#UpdateNoteVisiblity textarea").val("");
        $('#UpdateNoteVisiblity input[name="Title"').val("");
        $('#UpdateNoteVisibility input[name="Categories"').val("");
    }

</script>